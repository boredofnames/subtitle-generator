{
	"manifest_version": 3,
	"author": "kilospade",
	"name": "Subtitle Generator",
	"short_name": "SubsGen",
	"description": "Creates subtitles from a url and injects into the page",
	"version": "1.0.0",
	"background": {
		"service_worker": "background/service_worker.js",
		"page": "background/page.html",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content_scripts/index.js"]
		}
	],
	"icons": {
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"permissions": ["activeTab", "contextMenus", "notifications"]
}
